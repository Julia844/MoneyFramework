@{
    ViewBag.Title = "RiskControl";
}

<h2>风控参数</h2>

<div class="row">
    <br />
    <br />
</div>
<div class="row">
    <div class="col-md-12">
        <p>参数设置</p>

        <div class="col-md-2">
            <span>敞口比例：</span>
            <input id="changkouRadio" type="text" placeholder="0">
        </div>
        <div class="col-md-2">
            <span>风险度限制：</span>
            <input id="riskLevel" type="text" placeholder="0">
        </div>
        <div class="col-md-2">
            <span>单只股票所占总资产比例：</span>
            <input id="PerStockCostPercentage" type="text" placeholder="0">
        </div>
        <div class="col-md-2">
            <span>单只基金所占资产比例：</span>
            <input id="PerFundCostPercentage" type="text" placeholder="0">
        </div>
        <div class="col-md-2">
            <span>股票市值所占总资产比例：</span>
            <input id="stockRadio" type="text" placeholder="0">
        </div>
    </div>
</div>
<div class="row">
    <br />
    <br />
</div>
    <div class="col-md-12">
    <p>股票白名单</p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>代码</th>
                <th>流通股</th>
                <th>控比</th>
                <th>总股本</th>
                <th>控比</th>
            </tr>
        </thead>
        <tbody id="white_list_body"></tbody>
    </table>
</div>

<div class="row">
    <br />
    <br />
</div>

<div class="row" style="margin:0 auto">
    <br />
    <br />
    <div class="col-md-3 col-md-push-9">
        <button type="button" class="btn btn-primary" id="riskinfo_refresh">
            <span class="glyphicon glyphicon-repeat" aria-hidden="true"></span>
        </button>
        <button id="riskpage_submit" type="button" class="btn btn-primary" style="margin:auto">提交修改</button>
    </div>
</div>


<div class="col-md-12">
    <table class="table table-striped table-hover ">
        <!--委托列表-->
        <thead>
            <tr>
                <th>系统号</th>
                <th>报单编号</th>
                <th>合约/代码</th>
                <th>买卖</th>
                <th>开平</th>
                <th>报单手数</th>
                <th>未成交手数</th>
                <th>报单价格</th>
                <th>报单状态</th>
                <th>报单时间</th>
            </tr>
        </thead>
        <tbody id="rc_tb_inComplete" style="overflow-y:scroll;height:300px;position:relative"></tbody>
    </table>
</div>
<div class="col-md-12">
    <table class="table table-striped">
        <!--账户信息-->
        <thead>
            <tr>
                <th>用户</th>
                <th>股票剩余资金</th>
                <th>股票冻结资金量</th>
                <th>股票总盈亏</th>
                <th>股票市值</th>
                <th>股票成本</th>
                <th>期货可用资金</th>
                <th>期货权益</th>
                <th>期货风险度</th>
                <th>敞口比例</th>
            </tr>
        </thead>
        <tbody id="rc_tb_account"></tbody>
    </table>
</div>
<div class="col-md-12">
    <table class="table table-striped table-hover">
        <!--持仓列表-->
        <thead>
            <tr>
                <th>合约/代码</th>
                <th>买卖</th>
                <th>总持仓</th>
                <th>持仓均价</th>
            </tr>
        </thead>
        <tbody id="tm_tb_position"></tbody>
    </table>
</div>
<div class="col-md-12">
    <table class="table table-striped table-hover">
        <!--风控信息-->
        <thead>
            <tr>
                <th>代码</th>
                <th>手数</th>
                <th>价格</th>
                <th>方向</th>
                <th>时间</th>
                <th>用户</th>
                <th>策略号</th>
                <th>风控信息</th>
            </tr>
        </thead>
        <tbody id="tm_tb_risk"></tbody>
    </table>
</div>


  @section scripts{
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            var chat = $.connection.tradeMonitorHub;

            chat.client.updateauditInfo = function (jsonAccount, jsonRisk) {

                //刷新账户，委托，持仓，风控信息
                var length = $("[name='rc_account_info']").length;

                while (length > 0) {
                    var tr = $("[name='rc_account_info']")[0];

                    tr.remove();

                    length = $("[name='rc_account_info']").length;
                }

                length = $("[name='rc_entrust_info']").length;

                while (length > 0) {
                    var tr = $("[name='rc_entrust_info']")[0];

                    tr.remove();

                    length = $("[name='rc_entrust_info']").length;
                }

                length = $("[name='rc_cc_info']").length;

                while (length > 0) {
                    var tr = $("[name='rc_cc_info']")[0];

                    tr.remove();

                    length = $("[name='rc_cc_info']").length;
                }

                length = $("[name='rc_risk_info']").length;

                while (length > 0) {
                    var tr = $("[name='rc_risk_info']")[0];

                    tr.remove();

                    length = $("[name='rc_risk_info']").length;
                }

                var accounts = eval('(' + jsonAccount + ')');

                for(var i =0;i<accounts.length;i++)
                {
                    var account = eval('(' + accounts[i] + ')');
                }

                var entrusts = eval('(' + jsonEntrust + ')');

                for (var i = 0; i < entrusts.length; i++) {
                    var entrust = eval('(' + entrusts[i] + ')');
                }

                var CCs = eval('(' + jsonCC + ')');

                for (var i = 0; i < CCs.length; i++) {
                    var CC = eval('(' + CCs[i] + ')');
                }

                var Risks = eval('(' + jsonRisk + ')');

                for (var i = 0; i < Risks.length; i++) {
                    var Risk = eval('(' + Risks[i] + ')');
                }
            }

            $.connection.hub.start().done(function () {
            });
        });
    </script>
}
