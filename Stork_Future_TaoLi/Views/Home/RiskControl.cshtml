@{
    ViewBag.Title = "RiskControl";
}

<h2>风控参数</h2>
<div class="row">
    <div class="col-md-6 col-md-push-2">
        <p>仓位管理</p>

        <span>市值：</span>
        <span id="riskpage_value" style="color:blue"></span><br /><br />
        <span>总资产：</span>
        <span id="riskpage_account" style="color:blue"></span><br /><br />
        <span>可用资金：</span>
        <span id="riskpage_balance" style="color:blue"></span><br /><br />
        <span>股票成本：</span>
        <span id="riskpage_cost" style="color:blue"></span><br /><br /><br />

        <span>期货可用资金：</span>
        <span id="riskpage_faccount" style="color:blue"></span><br /><br />
        <span>期货动态权益：</span>
        <span id="riskpage_fvalue" style="color:blue"></span><br /><br />
        <span>期货占用保证金：</span>
        <span id="riskpage_fbond" style="color:blue"></span><br /><br />
        <span>期货风险度：</span>
        <span id="riskpage_friskdegree" style="color:blue"></span><br /><br />
        <br />
        <br />
    </div>

    <div class="col-md-6">
        <p>参数设置</p>

        <span>敞口比例：</span>
        <input id="changkouRadio" type="text" placeholder="0" class="form-control">
        <span>风险度限制：</span>
        <input id="riskLevel" type="text" placeholder="0" class="form-control">
        <span>单只股票所占资金比例：</span>
        <input id="PerStockCostPercentage" type="text" placeholder="0" class="form-control">
        <span>单只基金所占资金比例：</span>
        <input type="text" placeholder="0.05" class="form-control">
        <span>股票权益所占资金比例：</span>
        <input id="stockRadio" type="text" placeholder="0.80" class="form-control">
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="col-md-12">
            <p>股票白名单</p>
            <p>代码|流通股|比例|总股本|比例</p>
            <div class="col-md-12">
                <textarea id="whiteList" placeholder="白名单列表" style="max-width:1000px;width:inherit;height:500px"></textarea>
            </div>
        </div>
    </div>
    <div class="col-md-4 sr-only">
        <p>持仓列表</p>
        <p>代码|类型|数量|价格</p>
        <div class="col-md-12">
            <textarea id="positonList" placeholder="持仓列表" style="max-width:1000px;width:inherit;height:500px"></textarea>
        </div>
    </div>

</div>
<div class="row" style="margin:0 auto">
    <button id="riskpage_submit" type="button" class="btn btn-primary" style="margin:auto">提交修改</button>
</div>