@{
    ViewBag.Title = "RiskControl";
}

<h2>风控参数</h2>

<div class="row">
    <br />
    <br />
</div>
<div class="row">
    <div class="col-md-12">
        <p>参数设置</p>

        <div class="col-md-3">
            <h5>敞口比例：</h5>
            <input id="changkouRatio" type="text" placeholder="0">
        </div>
        <div class="col-md-3">
            <h5>风险度限制：</h5>
            <input id="riskLevel" type="text" placeholder="0">
        </div>
        <div class="col-md-3">
            <h5>单只股票/基金所占总资产比例：</h5>
            <input id="PerStockCostPercentage" type="text" placeholder="0">
        </div>
        <div class="col-md-3">
            <h5>股票成本占总资产比例：</h5>
            <input id="stockRatio" type="text" placeholder="0">
        </div>
    </div>
</div>
<div class="row">
    <br />
    <br />
</div>
    <div class="col-md-12">
    <p>股票白名单</p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>代码</th>
                <th>流通股</th>
                <th>控比</th>
                <th>总股本</th>
                <th>控比</th>
            </tr>
        </thead>
        <tbody id="white_list_body"></tbody>
    </table>
</div>

<div class="row">
    <br />
    <br />
</div>

<div class="row" style="margin:0 auto">
    <br />
    <br />
    <div class="col-md-3 col-md-push-9">
        <button type="button" class="btn btn-primary" id="riskinfo_refresh">
            <span class="glyphicon glyphicon-repeat" aria-hidden="true"></span>
        </button>
        <button id="riskpage_submit" type="button" class="btn btn-primary" style="margin:auto">提交修改</button>
    </div>
</div>


<div class="col-md-12" style="overflow-y:auto;overflow-x:auto;height:300px">
    <table class="table table-striped table-hover ">
        <!--委托列表-->
        <thead>
            <tr>
                <th>系统号</th>
                <th>报单编号</th>
                <th>合约/代码</th>
                <th>买卖</th>
                <th>开平</th>
                <th>报单手数</th>
                <th>未成交手数</th>
                <th>报单价格</th>
                <th>报单状态</th>
            </tr>
        </thead>
        <tbody id="rc_tb_inComplete" style="overflow-y:scroll;height:300px;position:relative"></tbody>
    </table>
</div>
<div class="col-md-12" style="overflow-y:auto;overflow-x:auto;height:300px">
    <table class="table table-striped">
        <!--账户信息-->
        <thead>
            <tr>
                <th>用户</th>
                <th>股票剩余资金</th>
                <th>股票冻结资金量</th>
                <th>股票总盈亏</th>
                <th>股票市值</th>
                <th>股票成本</th>
                <th>期货可用资金</th>
                <th>期货权益</th>
                <th>期货风险度</th>
                <th>敞口比例</th>
            </tr>
        </thead>
        <tbody id="rc_tb_account"></tbody>
    </table>
</div>
<div class="col-md-12" style="overflow-y:auto;overflow-x:auto;height:300px">
    <table class="table table-striped table-hover">
        <!--持仓列表-->
        <thead>
            <tr>
                <th>合约/代码</th>
                <th>类型</th>
                <th>总持仓</th>
                <th>持仓均价</th>
                <th>用户</th>
                <th>买卖</th>
            </tr>
        </thead>
        <tbody id="tm_tb_position"></tbody>
    </table>
</div>
<div class="col-md-12" style="overflow-y:auto;overflow-x:auto;height:300px">
    <table class="table table-striped table-hover">
        <!--风控信息-->
        <thead>
            <tr>
                <th>代码</th>
                <th>手数</th>
                <th>价格</th>
                <th>方向</th>
                <th>时间</th>
                <th>用户</th>
                <th>策略号</th>
                <th>风控信息</th>
            </tr>
        </thead>
        <tbody id="tm_tb_risk"></tbody>
    </table>
</div>


  @section scripts{
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            var chat = $.connection.tradeMonitorHub;

            chat.client.updateauditInfo = function (jsonAccount, jsonRisk) {

                //刷新账户，委托，持仓，风控信息
                var length = $("[name='rc_account_info']").length;

                while (length > 0) {
                    var tr = $("[name='rc_account_info']")[0];

                    tr.remove();

                    length = $("[name='rc_account_info']").length;
                }

                length = $("[name='rc_entrust_info']").length;

                while (length > 0) {
                    var tr = $("[name='rc_entrust_info']")[0];

                    tr.remove();

                    length = $("[name='rc_entrust_info']").length;
                }

                length = $("[name='rc_cc_info']").length;

                while (length > 0) {
                    var tr = $("[name='rc_cc_info']")[0];

                    tr.remove();

                    length = $("[name='rc_cc_info']").length;
                }

                length = $("[name='rc_risk_info']").length;

                while (length > 0) {
                    var tr = $("[name='rc_risk_info']")[0];

                    tr.remove();

                    length = $("[name='rc_risk_info']").length;
                }

                var accounts = eval('(' + jsonAccount + ')');
                var _risk = eval('(' + jsonRisk + ')');

                for (var i = 0; i < accounts.length; i++) {
                    var account = accounts[i];

                    for (var j = 0; j < account.entrusts.length; j++) {
                        var entrust = accounts[i].entrusts[j];

                        var entrustitem = '<tr name="rc_entrust_info"><td>' + entrust.orderRef + '</td><td>' + entrust.orderSysRef + '</td><td>' + entrust.code + '</td><td>' + entrust.direction + '</td><td>' + entrust.ComboOff + '</td><td>' + entrust.requestAmount + '</td><td>' + entrust.dealAmount + '</td><td>' + entrust.dealMoney + '</td><td>' + entrust.status + '</td></tr>'
                        $('#rc_tb_inComplete').append(entrustitem);
                    }

                    for (var j = 0; j < account.positions.length; j++) {
                        var position = account[i].positions[j];

                        var positionitem = '<tr name="rc_cc_info"><td>' + position.code + '</td><td>' + position.type + '</td><td>' + position.amount + '</td><td>' + position.price + '</td><td>' + position.name + '</td><td>' + position.direction + '</td></tr>'
                        $('#tm_tb_position').append(positionitem);
                    }

                    var accountitem = '<tr name="rc_account_info"><td>' + account.alias + '</td><td>' + account.account + '</td><td>' + account.frozen + '</td><td>' + account.earning + '</td><td>' + account.value + '</td><td>' + account.cost + '</td><td>' + account.faccount + '</td><td>' + account.fvalue + '</td><td>' + account.frisk + '</td><td>' + account.risk_exposure + '</td></tr>'
                    $('#rc_tb_account').append(accountitem);
                }

                for (var i = 0; i < _risk.length; i++) {
                    var riskitem = '<tr name="rc_risk_info"><td>' + _risk[i].code + '</td><td>' + _risk[i].amount + '</td><td>' + _risk[i].price + '</td><td>' + _risk[i].orientation + '</td><td>' + _risk[i].time + '</td><td>' + _risk[i].alias + '</td><td>' + _risk[i].strategy_id + '</td><td>' + _risk[i].err + '</td></tr>'
                    $('#tm_tb_risk').append(riskitem);
                }
            }

            $.connection.hub.start().done(function () {
            });
        });
    </script>
}
