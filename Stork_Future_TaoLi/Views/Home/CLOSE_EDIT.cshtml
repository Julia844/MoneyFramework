@{
    ViewBag.Title = "平仓设置";
}

<!--本页涉及平仓内容的修改，以及交易文件的修改-->
<h2>平仓参数设定</h2>


<div class="container-fluid">
    <div id="content">
        <div class="col-md-12">
            <div class="col-md-10">
                <input id="contract_value" type="text" placeholder="期货合约" style="margin:5px" />
                <input id="basis_value" type="text" placeholder="开仓基差" style="margin:5px" />
                <input id="index_value" type="text" placeholder="指数合约" style="margin:5px" />
                <span class="sr-only open_strategy_id" ></span> 
                <span id="open_hd" class="sr-only open_hd"></span> 
            </div>
            <div class="col-md-2">
                <div class="col-md-12">
                    <button id="btnGetStrategyInfo" class="btn btn-info">获取详情</button>
                </div>
            </div>
        </div>
        <div class="col-md-12" style="margin-bottom:20px;margin-top:30px">
            <div class="col-md-10">
                <input id="coe_value" type="text" placeholder="股票成本" style="margin:5px" />
                <input id="sd_value" type="text" placeholder="股票分红" style="margin:5px" />
                <input id="sa_value" type="text" placeholder="股票配股" style="margin:5px" />
                <input id="pe_value" type="text" placeholder="预期收益" style="margin:5px" />
                <input id="openpoint_value" type="text" placeholder="开仓点位" style="margin:5px" />
            </div>
            <div class="col-md-2">
                <div class="col-md-12">
                    <button id="btnSubmit_close" class="btn btn-info">确认交易列表</button>
                </div>
            </div>
            <span class="sr-only" id="strategyID">@ViewBag.ID</span>
            <span class="sr-only" id="userName">@ViewBag.USER</span>
        </div>
        <div class="col-md-12" style="margin-top:20px">
            <div class="col-lg-12">
                <textarea id="buylist" style="max-width:1000px;width:inherit;height:500px"></textarea>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            var chat = $.connection.strategyInfoHub;

            $('#btnGetStrategyInfo').click(function () {
                var index = $.trim($('#index_value')[0].value);
                var contract = $.trim($('#contract_value')[0].value);
                var basis = $.trim($('#basis_value')[0].value);
                var userName = $.trim($('#userName')[0].innerText);

                //发送至服务器
                var _basic = {
                    USER: userName,
                    ACTIVITY: "C1",
                    ORIENTATION: "",
                    ID: ""
                }

                var strategy = {
                    basic: _basic,
                    CONTRACT: contract,
                    BASIS: basis,
                    INDEX: index
                }
                var chat = $.connection.strategyInfoHub;
                var JSONSTRING = _basic.ACTIVITY + JSON.stringify(strategy);
                chat.server.getStrategyID(JSONSTRING);


                
            });

            chat.client.GetStrategyId = function (ids,hd) {
                $('.open_strategy_id')[0].innerText = ids;
                $('.open_hd')[0].innerText = hd;
            };

            chat.client.GetDealList = function (deals, stockcost, futureIndex) {
                $('#buylist')[0].value = deals;
                $('#coe_value')[0].value = stockcost;
                $('#openpoint_value')[0].value = futureIndex;
            };


            $.connection.hub.start().done(function () {
            });
        });
    </script>
}
