@{
    ViewBag.Title = "开仓设置";
}
<!--本页涉及开仓权重内容的修改，以及交易文件的修改-->
<h2>开仓参数设定</h2>


<div class="container-fluid">
    <div id="content">
        <div class="col-md-12" style="margin-bottom:30px">
            <div class="col-md-8">
                <input id="ct_value" type="text" placeholder="期货合约" />
                <input id="op_value" type="text" placeholder="开仓点位" />
                <input id="hd_value" type="text" placeholder="交易手数" />
                <select id="index_input" style="font-size:20px">
                    <option value="300">沪深300</option>
                    <option value="300">上证50</option>
                    <option value="300">中证500</option>
                </select>
            </div>
            <button id="btnViewList" class="btn btn-success">预览交易列表</button>
            <button id="btnSubmit_open" class="btn btn-info">确认交易列表</button>
            <span class="sr-only" id="strategyID">@ViewBag.ID</span>
            <span class="sr-only" id="userName">@ViewBag.USER</span>
        </div>
        <div class="row" style="margin-top:40px">
            <div class="col-lg-6">
                <div class="col-lg-12">
                    <textarea id="weightList" placeholder="请将权重文件粘贴至此后编辑" style="max-width:1000px;width:inherit;height:500px"></textarea>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="col-lg-12">
                    <textarea id="tradeOrder" placeholder="权重文件和手数确认后，可通过计算在此预览并修改交易列表" style="max-width:1000px;width:inherit;height:500px"></textarea>
                </div>
            </div>
        </div>
    </div>
</div>
